<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCam"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/camera_shadow_fill"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/ivInstaLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nav_logo_whiteout"
            android:layout_marginStart="120dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/ivMessage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="120dp"
            android:src="@drawable/nav_inbox_paper_plane"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

    <!--    <Button-->
<!--        android:id="@+id/btnTakePhoto"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Take Photo"-->
<!--        android:layout_below="@+id/etDescription"/>-->

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="200dp"
        android:layout_height="360dp"
        android:layout_marginStart="100dp"
        android:layout_below="@+id/llMenu"

        tools:srcCompat="@tools:sample/avatars" />
<!--        android:layout_marginStart="80dp"-->
<!--    android:layout_below="@+id/btnTakePhoto"-->

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPhoto"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Description"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:layout_below="@+id/etDescription"/>

    <LinearLayout
        android:id="@+id/ldMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="25dp"
            android:src="@drawable/instagram_home_filled_24"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/instagram_new_post_filled_24"
            android:layout_marginStart="120dp"
            android:clickable="true"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="120dp"
            android:src="@drawable/instagram_user_filled_24"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

</RelativeLayout>